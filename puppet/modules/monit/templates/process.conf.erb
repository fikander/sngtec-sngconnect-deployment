check process <%= @name %> with pidfile <%= @pidfile %>
  start program = "<%= @start_script %>"
  stop program  = "<%= @stop_script %>"
<% if @ip_port.to_i > 0 -%>
  if failed port <%= @ip_port %> then restart
<% elsif @socket -%>
  if failed unixsocket <%= @socket %> then restart
<% end -%>
<% @checks.each do |check| -%>
  <%= check %>
<% end -%>
  group <%= @group %>
